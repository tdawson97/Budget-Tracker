@model BudgetTrackerWeb.Models.Earning
<div>
  <form asp-action="Create" method="post">
    <fieldset>
      <legend>Add Earning</legend>
      <div>
        <label asp-for="Date">Date:</label>
        <input asp-for="Date" type="date" value="" class="form-control" />
      </div>
      <div>
        <label asp-for="Category">Category:</label>
        <select asp-for="Category" class="form-control">
          <option value="">&nbsp;</option>
          <option value="Wages">Wages</option>
          <option value="Bonuses">Bonuses</option>
          <option value="Other Income">Other Income</option>
          <option value="Interest">Interest</option>
          <option value="Dividends">Dividends</option>
          <option value="Gifts">Gifts</option>
          <option value="Miscellaneous">Miscellaneous</option>
        </select>
      </div>
      <div>
        <label asp-for="Description">Description:</label>
        <input asp-for="Description" type="text" value="" class="form-control" />
      </div>
      <div>
        <label asp-for="Amount">Amount:</label>
        <input asp-for="Amount" type="number" step="0.01" value="" class="form-control" />
      </div>
        <input type="submit" value="Submit" class="btn btn-primary" />
    </fieldset>
  </form>
</div>