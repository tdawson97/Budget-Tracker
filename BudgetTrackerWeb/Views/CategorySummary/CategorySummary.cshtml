@model IEnumerable<BudgetTrackerWeb.Models.CategorySummary>
@{
    int selectedMonth = ViewBag.SelectedMonth ?? 0;
}


<form method="get" class="mb-3">
    <label>Year:</label>
    <input type="number" name="year" value="@ViewBag.SelectedYear" min="2000" max="2100" />

    <label>Month:</label>
    <select name="month">
        <option value="">All</option>
        @for (int i = 1; i <= 12; i++)
        {
            <option value="@i" selected="@(selectedMonth == i ? "selected" : null)">@i</option>
        }
    </select>

    <button type="submit" class="btn btn-primary btn-sm">Filter</button>
</form>


<h2>Expenses by Category</h2>
<canvas id="expenseChart" width="100" height="50"></canvas>

<h2>Earnings by Category</h2>
<canvas id="earningChart" width="100" height="50"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var expenseCategories = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.ExpenseCategories));
    var expenseTotals = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.ExpenseTotals));

    var expenseChart = document.getElementById('expenseChart').getContext('2d');
    new Chart(expenseChart, {
        type: 'bar',
        data: {
            labels: expenseCategories,
            datasets: [{
                label: 'Total Spent ($)',
                data: expenseTotals,
                borderWidth: 1,
                backgroundColor: [
                'rgba(255, 99, 132, 0.8)',
                'rgba(54, 162, 235, 0.8)',
                'rgba(255, 206, 86, 0.8)',
                'rgba(75, 192, 192, 0.8)',
                'rgba(153, 102, 255, 0.8)',
                'rgba(255, 159, 64, 0.8)'  
            ],
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    var earningCategories = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.EarningCategories));
    var earningTotals = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.EarningTotals));

    var earningChart = document.getElementById('earningChart').getContext('2d');
    new Chart(earningChart, {
        type: 'bar',
        data: {
            labels: earningCategories,
            datasets: [{
                label: 'Total Earned ($)',
                data: earningTotals,
                borderWidth: 1,
                backgroundColor: [
                'rgba(255, 99, 132, 0.8)',
                'rgba(54, 162, 235, 0.8)',
                'rgba(255, 206, 86, 0.8)',
                'rgba(75, 192, 192, 0.8)',
                'rgba(153, 102, 255, 0.8)',
                'rgba(255, 159, 64, 0.8)'  
            ],
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
